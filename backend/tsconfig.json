{
    "compilerOptions": {
        "target": "ES2015",
        "lib": [
            "ES2023"
        ],
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "outDir": "./dist",
        "baseUrl": ".",
       
        "typeRoots": [
            "./src/global.d.ts",
            "./node_modules/@types"
        ]
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "src/**/*.ts",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}